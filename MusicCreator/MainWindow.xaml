<Window x:Class="MusicCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicCreator"
        xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Chrome Window"
        Width="500" Height="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- 80% opacity white -->
        <SolidColorBrush x:Key="SurfaceBrush" Color="#CCFFFFFF"/>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <wc:WindowChrome CaptionHeight="36"
                     CornerRadius="0"
                     GlassFrameThickness="0"
                     ResizeBorderThickness="8"
                     UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="18" Background="{DynamicResource SurfaceBrush}">

        <Grid x:Name="Form" MouseDown="Form_MouseDown" Loaded="Form_Loaded">
            <!-- Custom title bar (draggable area) -->
            <Grid Height="36" VerticalAlignment="Top"
                  Background="Transparent">
                <!-- Mark this as non-client hit-test area by handling MouseDown or using WindowChrome attached prop: -->
                <Grid.InputBindings>
                    <!-- Optional: double-click to maximize -->
                    <MouseBinding Gesture="LeftDoubleClick" Command="{x:Static SystemCommands.MaximizeWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </Grid.InputBindings>

                <DockPanel Margin="10,0">
                    <TextBlock Text="" VerticalAlignment="Center" FontWeight="Bold"/>

                </DockPanel>
            </Grid>
            <Button x:Name="Done_btn" Content="I´m Done!" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="103" Click="Done_btn_Click"/>
           

            <!-- Content -->
            <!--<StackPanel Margin="20,56,20,20">
                <TextBlock Text="Drag from the top bar; window has native resize + shadow." Margin="0,0,0,8"/>
                <TextBlock Text="Use CornerRadius for rounded corners. No AllowsTransparency needed."/>
            </StackPanel>-->
        </Grid>
    </Border>
</Window>
